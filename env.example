# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Autenticación
JWT_SECRET=tu-jwt-secret-super-seguro-y-largo-para-produccion

# Stripe (Pagos)
# Obtén estas claves desde tu panel de desarrollador de Stripe
STRIPE_SECRET_KEY=sk_test_tu-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_tu-stripe-webhook-secret

# Anthropic Claude (IA)
# Obtén tu clave API de Anthropic
ANTHROPIC_API_KEY=sk-ant-tu-anthropic-api-key

# UltraMsg (WhatsApp)
# Obtén estos datos desde tu panel de UltraMsg
ULTRAMSG_INSTANCE_ID=tu-ultramsg-instance-id
ULTRAMSG_CLIENT_ID=tu-ultramsg-client-id
ULTRAMSG_TOKEN=tu-ultramsg-token

# Archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:8080 